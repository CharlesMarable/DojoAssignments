<html>
    <head>
        <title>Wedding Planner New Wedding</title>
    </head>
    <body>
        <h1>Plan Your Wedding</h1>
        <a href="/Logout", "LogReg"><button>Logout</button></a>
        <a href="/Dashboard"><button>Dashboard</button></a>
            @{
                foreach(var error in ViewBag.Errors)
                {
                    
                    if(@error.Errors.Count > 0)
                    {
                        
                        <p>@error.Errors[0].ErrorMessage</p>
                    }
                }
            }

            <form action="NewWedding" method="post">
            <p><label for="WedderOne">Wedder One</label>
            <input type="text" id="WedderOne" name="WedderOne"><p>
                
            <p><label for="WedderTwo">Wedder Two</label>
            <input type="text" id="WedderTwo" name="WedderTwo"><p>

            <p><label for="WDate">Wedding Date</label>
            <input type="date" id="WDate" name="WDate"></p>

            <p><label for="Address">Address</label>
            <input type="text" id="Address" name="Address"><p>


            <p><button type="submit" name="AddWeddButt">Create</button></p>
            </form>
    </body>
</html>